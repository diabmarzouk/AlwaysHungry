<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="What's in your fridge?"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        app:layout_constraintBottom_toTopOf="@+id/categorySpinner"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="125dp"
        app:layout_constraintBottom_toTopOf="@+id/itemText" />
    <TextView
        android:id="@+id/itemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Items"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="207dp"
        app:layout_constraintBottom_toTopOf="@+id/itemSpinner" />

    <Spinner
        android:id="@+id/itemSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="243dp"
        app:layout_constraintBottom_toTopOf="@+id/quantityText"
        />

    <TextView
        android:id="@+id/quantityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity/Amount"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="207dp"
        app:layout_constraintBottom_toTopOf="@+id/quantitySpinner" />

    <Spinner
        android:id="@+id/quantitySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="243dp"
        app:layout_constraintBottom_toTopOf="@+id/dateText"
        />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchased date"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="314dp"
        app:layout_constraintBottom_toTopOf="@+id/dateET" />

    <EditText
        android:id="@+id/dateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="356dp"
        app:layout_constraintBottom_toTopOf="@+id/commentText" />

    <TextView
        android:id="@+id/commentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="Comments"
        app:layout_constraintBottom_toTopOf="@+id/commentsET"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/commentsET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="470dp"
        app:layout_constraintTop_toBottomOf="@+id/commentText"/>
        />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="217dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/commentsET"
        android:text="ADD ITEM"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="667dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>