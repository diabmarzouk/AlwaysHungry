<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:text="I have..."
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/myBrown"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/meats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/meatListView"
        android:text= "Meats"
        android:textSize="30dp"
        android:textColor="@color/myBrown"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/vegetables"
        android:id="@+id/meatListView"/>

    <TextView
        android:id="@+id/vegetables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vegetables"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/vegetablesListView"
        android:textColor="@color/myBrown"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/dairy"
        android:id="@+id/vegetablesListView"/>
    <TextView
        android:id="@+id/dairy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/dairyListView"
        android:text= "Dairy"
        android:textSize="30dp"
        android:textColor="@color/myBrown"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/dairy"
        android:id="@+id/dairyListView"/>
    <TextView
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dairy"
        android:text= "Other"
        android:textSize="30dp"
        android:textColor="@color/myBrown"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/other"
        android:id="@+id/otherListView" />


</LinearLayout>